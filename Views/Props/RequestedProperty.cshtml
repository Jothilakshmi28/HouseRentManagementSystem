
@model IEnumerable<HouseRentManagementSystem.Models.Prop>

@{
    ViewBag.Title = "RequestedProperty";
    Layout = null;
}
<br>
<br>
<h2 style="text-align:center">MY REQUESTED PROPERTIES</h2>


<head>

    <script>
        $(window).on("load resize ", function () {
            var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
            $('.tbl-header').css({ 'padding-right': scrollWidth });
        }).resize();
    </script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link src="https://fonts.googleapis.com/css?family=Roboto:400,500,300,700" type="text/css">
    <link src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/css">
    <style>
        .logo {
            position: fixed;
            bottom: 0;
            right: 0;
            width: 100px;
            height: 100px;
        }

        #btn {
            left: 5%;
            position: absolute;
        }

        .bs-example {
            margin: 20px;
        }

        table {
            width: 100%;
            table-layout: fixed;
            border: 4px outset chartreuse;
        }

        .tbl-header {
            background-color: dimgrey;
            position: fixed;
        }

        .tbl-content {
            height: 300px;
            position: relative;
            overflow-x: auto;
            margin-top: 0px;
            border: 1px solid rgba(255,255,255,0.3);
        }

        th {
            padding: 20px 15px;
            text-align: left;
            font-weight: 200;
            font-size: 15px;
            color: #fff;
            text-transform: uppercase;
        }

        td {
            padding: 25px;
            text-align: left;
            vertical-align: middle;
            font-weight: 300;
            font-size: 15px;
            color: #fff;
            border-bottom: solid 1px rgba(255,255,255,0.1);
        }


        /* demo styles */
        body {
            font-family: 'Roboto', sans-serif;
        }

        button {
            float: right;
            margin: 5px;
            color: oldlace;
        }

        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
        }

        ::-webkit-scrollbar-thumb {
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
        }
    </style>
</head>
<div class="bs-example">
    <table class="table table-dark ">
        <thead>
            <tr>
                <th>
                    Property Name
                </th>
                <th>
                    BHK type
                </th>
                <th>
                    House type
                </th>
                <th>
                    Address Line1
                </th>
                <th>
                    Address Line2
                </th>
                <th>
                    City
                </th>
                <th>
                    State
                </th>
                <th>
                    Rent
                </th>


            </tr>
        </thead>



        @Html.AntiForgeryToken()
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PropertyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BHK_type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.House_type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address_Line1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address_Line2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.city)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.state)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rent)
                        &nbsp;&nbsp;
                        <button type="button" id="img" class="btn btn-info" data-toggle="modal" data-target="#myModal" onclick="location.href = '@Url.Action("Images", "Props", new { id = item.Id })'">
                            <span class="glyphicon glyphicon-picture"></span> Property images
                        </button>

                        <button class="btn btn-md btn-danger" name="Cancel"
                                onclick="location.href='@Url.Action("UserCancels", new { id = item.Id, sid = item.SellerID })'">
                            Cancel
                        </button>
                    </td>

                    <!--<td>
                        <input type="submit" name="command" value="Request" />
                        <input type="submit" name="command" value="Cancel" />              <!-- <input type="submit" name="answer" value="Cancel"  class="btn btn-danger" />
                    </td>!-->
                </tr>

            </tbody>



        }
    </table>



</div>

<button class="btn btn-sm btn-info" id="btn" onclick="location.href = '@Url.Action("IndexTenant","Account")'">
    <span class="glyphicon glyphicon-chevron-left"></span>
    Back
</button>



<img src="~/Icons/logo.png" class="logo" />


