    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-4">Property Name</label>
        <div class="row-cols-3">
            @Html.EditorFor(model => model.PropertyName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PropertyName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-4">BHK Type</label>
        <div class="row-cols-3">
            @Html.EditorFor(model => model.BHK_type, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BHK_type, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.SellerID)
    <div class="form-group">
        <label class="col-md-4">House type</label>
        <div class="row-cols-3">
