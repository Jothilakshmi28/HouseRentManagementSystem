<section id="aa-latest-property">
    <div class="container">
        <div class="aa-latest-property-area">
            <div class="aa-title">
                <h2>Sold Properties</h2>
                <span></span>
            </div>


            <div class="d-grid gap-3">

                @foreach (var item in Model)
                {
                    var image = item.Images1;


                    <article class="aa-properties-item">
                        <a href="#" class="aa-properties-item-img">




                            @for (int j = 0; j < 1; j++)
                            {

                                if (item.Images1 != null)
                                {
                                    var base64 = Convert.ToBase64String(image[j].PropertyImage);
                                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                                    <img src="@imgsrc" style="        max-height: 200px;
        height: 200px
"/>

                                }
                            }

                            <div class="aa-tag for-rent" style="background-color:indianred">
                               Sold
                            </div>
                            <div class="aa-properties-item-content">
                                <div class="aa-properties-info">
                                    <span>@item.House_type</span>
                                    <span>@item.BHK_type</span>
                                    <span>@item.SquareFeet sq.ft</span>
                                </div>
                                <div class="aa-properties-about">
                                    <h3><a href="#">@item.PropertyName</a></h3>
                                    <p>This is a @item.BHK_type @item.House_type of @item.SquareFeet (Sq.ft.) in @item.city city at @item.state</p>
                                </div>
                                <div class="aa-properties-detial">
                                    <span class="aa-price">
                                        <span>&#8377;</span> @item.Rent
                                    </span>
                                    <a href="/Props/Detail/@item.Id" class="aa-search-btn" style="color:orange">View Details</a>
                                    <br>
                                    <br>
                                </div>

                              


                                <div class="accordion" style="text-align:center">

                                    <button type="button" class="btn danger " onclick="location.href = '@Url.Action("Delete", "Props",new { id = item.Id })'">
                                        Delete
                                    </button>
                                    <button type="button" class="btn info " onclick="location.href = '@Url.Action("Edit", "Props",new { id = item.Id })'">
                                        Edit
                                    </button>
                                  
                                </div>



                            </div>
                        </a>




                    </article>






                }
                <br>


            </div>     <br>


            <div></div>



        </div>

    </div>
</section>


