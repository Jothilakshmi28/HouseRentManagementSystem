@model HouseRentManagementSystem.Models.Renter

@{
    ViewBag.Title = "Edit";
    Layout = null;
}


<head>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" rel="stylesheet" type="text/css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>


    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/navbar-top-fixed/">



    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>


</head>
<style>

    #btn {
        left: 20%;
        position: absolute;
    }

    .logo {
        position: fixed;
        bottom: 0;
        right: 0;
        width: 100px;
        height: 100px;
    }

    button {
        position: relative;
    }


    .img-wrap {
        position: relative;
        display: inline-block;
        font-size: 0;
    }

        .img-wrap #edit {
            position: absolute;
            top: 1px;
            right: 1px;
            z-index: 100;
            padding: 12px;
            color: black;
            font-weight: bolder;
            cursor: pointer;
            opacity: .2;
            text-align: center;
            font-size: 35px;
            line-height: 10px;
            border-radius: 50%;
            opacity: 2;
        }

        .img-wrap:hover #edit {
            opacity: 1;
        }


    .panel-body {
        text-align: center;
        justify-content: center;
    }

    .form-horizontal {
        margin: auto;
        width: 45%;
    }


    h3 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .scroller {
        height: 500px;
        overflow-y: auto;
        overflow-x: hidden;
    }


    #image1 {
        cursor: pointer;
        width: 100px;
        height: 100px;
        border: 2px solid #03b1ce;
    }
</style>
<body>
    @using (Html.BeginForm("Edit", "Renter", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        //string image = Convert.ToString(Session["Image"]);
        <div class="panel-body">

            <div class="box box-info">

                <div class="box-body">
                    <div class="col-sm-6">
                        <div class="userimage">
                            @if (Session["base64"] != null)
                            {

                                //TempData["userimage"] = Convert.ToBase64String(obj.ProfileImage);

                                var base64 = Session["base64"];

                                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);



                                <div class="img-wrap" style="text-align:right">
                                    <input id="image" name="image" class="hidden" type="file" hidden>

                                    <span id="edit">&#43;</span>
                                    <img src="@imgsrc" style="height:120px; width:120px;" class="rounded-circle" id="image1">

                                </div>

                            }
                            else
                            {
                                <div class="img-wrap" style="text-align:right">
                                    <input id="image" name="image" class="hidden" type="file" hidden>
                                    <span id="edit">&#43;</span>
                                    <img alt="User Pic" style="height:120px; width:120px;" src="~/Icons/avatar.png" id="image1" class="rounded-circle">
                                </div>


                            }

                            <!--
                            <img alt="User Pic" src="https://x1.xingassets.com/assets/frontend_minified/img/users/nobody_m.original.jpg" id="profile-image1" class="rounded-circle">

                            <input id="profile-image-upload" class="hidden" type="file">
                            <div style="color:#999;">click here to change profile image</div>
                                -->
                            <!--Upload Image Js And Css-->







                        </div>

                        <br>

                        <!-- /input-group -->
                    </div> <br><br><h2 style="text-align:left;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">   <i class="far fa-edit" id="edit"></i>EDIT MY PROFILE</h2>
                </div>
            </div>
        </div>

        <div class="form-horizontal" align="center">

            <div class="scroller">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <label class="col-md-4">First name</label>
                    <div class="row-cols-2">
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4">Last name</label>
                    <div class="row-cols-2">
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <label class="col-md-4">Email</label>
                    <div class="row-cols-2">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4">Password</label>
                    <div class="row-cols-2">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4">Phone number</label>
                    <div class="row-cols-2">
                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4">Aadhar number</label>
                    <div class="row-cols-2">
                        @Html.EditorFor(model => model.AadharNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AadharNumber, "", new { @class = "text-danger" })
                    </div>
                </div>


                <br>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Save changes" class="btn btn-default" />
                    </div>
                </div>
                <button class="btn btn-sm btn-info" id="btn" onclick="location.href = '@Url.Action("Index")'">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    Back
                </button>
            </div>
        </div>
        <script>
            $(function () {
                $('#image1').on('click', function () {
                    $('#image').click();
                });
            });</script>


    }     <img src="~/Icons/logo.png" class="logo" />


</body>
